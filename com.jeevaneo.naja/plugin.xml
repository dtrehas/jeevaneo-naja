<plugin>

   <extension point="org.eclipse.emf.ecore.generated_package">
      <package
            uri="http://naja.jeevaneo.com/1.0"
            class="com.jeevaneo.naja.NajaPackage"
            genModel="model/Naja.genmodel"/>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            id="com.jeevaneo.naja.actons.categories"
            objectClass="com.jeevaneo.naja.Category">
         <menu
               id="com.jeevaneo.naja.menu1"
               label="Naja export"
               path="additions">
            <separator
                  name="group1">
            </separator>
         </menu>
         <action
               class="com.jeevaneo.naja.popup.actions.ExportCategoriesAsCsvAction"
               enablesFor="*"
               id="com.jeevaneo.naja.newAction"
               label="Export Categories as CSV"
               menubarPath="com.jeevaneo.naja.menu1/group1">
         </action>
      </objectContribution>
      <objectContribution
            id="com.jeevaneo.naja.actons.projects"
            objectClass="com.jeevaneo.naja.Project">
         <menu
               id="com.jeevaneo.naja.menu1"
               label="Naja export"
               path="additions">
            <separator
                  name="group1">
            </separator>
         </menu>
         <action
               class="com.jeevaneo.naja.popup.actions.ExportTasksAsCsvAction"
               enablesFor="*"
               id="com.jeevaneo.naja.newAction"
               label="Export Tasks as CSV"
               menubarPath="com.jeevaneo.naja.menu1/group1">
         </action>
      </objectContribution>
      <objectContribution
            id="com.jeevaneo.naja.actons.task.mappings"
            objectClass="org.eclipse.emf.ecore.EObject">
         <menu
               id="com.jeevaneo.naja.menu1"
               label="Naja export"
               path="additions">
            <separator
                  name="group1">
            </separator>
         </menu>
         <action
               class="com.jeevaneo.naja.popup.actions.ExportTasksWithoutMappingAsCsvAction"
               enablesFor="*"
               id="com.jeevaneo.naja.popup.actions.ExportTasksWithoutMappingAsCsvAction2"
               label="Export Tasks without mapping as CSV"
               menubarPath="com.jeevaneo.naja.menu1/group1">
         </action>
         <visibility>
            <or>
               <objectClass
                     name="com.jeevaneo.naja.Project">
               </objectClass>
               <objectClass
                     name="com.jeevaneo.naja.TaskMappings">
               </objectClass>
            </or>
         </visibility>
      </objectContribution>
   </extension>

</plugin>
